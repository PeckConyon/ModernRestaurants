@model IEnumerable<JobSchedule.Entities.Models.MemberJob>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Member.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member.Family)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Job)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Job.DateAssigned)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Job.DateCompleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Job.Points)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Member.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Member.Family.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Job.Name)
            </td>
            <th>
                @Html.DisplayFor(model => item.Job.DateAssigned)
            </th>
            <th>
                @Html.DisplayFor(model => item.Job.DateCompleted)
            </th>
            <th>
                @Html.DisplayFor(model => item.Job.Points)
            </th>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new {  id=item.Id}) |
                @Html.ActionLink("Delete", "Delete", new {  id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
